import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class Main {

	public static void main(String[] args) throws ClassNotFoundException, SQLException {
		Class.forName("org.sqlite.JDBC");
		Connection conexion =DriverManager.getConnection("jdbc:sqlite:d:/sqlite/ejemplo.db");
		
		// Cargar el driver de Apache Derby:
		Class.forName("org.apache.derby.jdbc.EmbeddedDriver");
		// Establecemos una conexión con la BD "ejemplo" que reside en D:/db/Derby
		Connection conexion =
		DriverManager.getConnection("jdbc:derby:D:/db/Derby/ejemplo");


	}

}
