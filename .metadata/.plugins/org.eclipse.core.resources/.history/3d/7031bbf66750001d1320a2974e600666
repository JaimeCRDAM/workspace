package prueba;

import java.io.*;

public class examen1 {

		public static void main (String args[]) throws IOException {
			File fichero = new File ("libros.dat");
			RandomAccessFile file = new RandomAccessFile(fichero,"rw");
			
			// Podría haber muchos más libros - Utilizaremos el ISBN para como código único para obtener la dirección física dónde guardarlo:
			int isbn[] = {23,1,10,13,15,4,30,20,25,12};
			
			// Cada TITULO ocupará 40 caracteres:
			String titulo[] = {"La casa de los espíritus","La novia gitana","Amanece que no es poco","El clan del oso cavernario","Paula","Viven","Los pilares de la tierra","Los renglones torcidos de Dios","La piel del tambor","El juego del ángel"};
			
			// Número de EJEMPLARES que tenemos de cada libro:
			int ejemplares[]={1,2,8,2,1,3,5,1,1,4};
			
			// Precio de cada libro:
			double precio[]={50, 27.5,12,38,20, 10.5, 6.5,25,20,15};
			
			// A partir de aquí empieza la solución del alumno.
			//4+40+4+8
			for(int i=0; i<isbn.length; i++) {
				file.seek((isbn[i]-1)*58);
				file.writeInt(isbn[i]);
				StringBuffer buffer = new StringBuffer(titulo[i]); 
				buffer.setLength(40); 
				file.writeChars(buffer.toString());
				file.writeInt(ejemplares[i]); 
				file.writeDouble(precio[i]); 
			}
			file.close();
			fichero = new File ("libros.dat");
			file = new RandomAccessFile(fichero,"rw");
			int cont = 0;
			for(int i=0; i<file.length(); i++) {
				int isbnN = file.readInt();
				char nombre[]= new char[40];
				int ejemplar;
				double precioD;
				if (isbnN != 0) {
					for(int j=0; j<nombre.length; j++) {
						nombre[j] = file.readChar();
					}
					ejemplar = file.readInt();
					precioD = file.readDouble();
					System.out.println("comienzo del registro: "+cont+" -> ISBN: "+isbnN+" Titulo: "+nombre.toString()+", Ejemplares: "+ejemplar+", Precio: "+precioD );
					cont++;
				}
			}
			

	}

}
